<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="user"
            type="com.farukayata.e_commerce2.model.UserProfile" />

        <variable
            name="viewModel"
            type="com.farukayata.e_commerce2.ui.viewmodel.ProfileViewModel" />
    </data>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".ui.fragment.ProfileFragment">

        <!-- Profil Fotoğrafı
         tools olarak değiştik onu düzeltmemiz gereke bilir
         app:imageUrl="@{user.profileImageUrl}"
         -->
        <ImageView
            android:id="@+id/imageViewUserProfile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"
            tools:src="@drawable/superman"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:imageUrl="@{viewModel.userProfile.profileImageUrl}" />
        <!--
        Data Binding ile doğrudan ProfileViewModel’den resmi çekiyoruz.
        -->

        <!-- Kullanıcı Adı ve Soyadı
         burda da duruma göre viewmodel yapıla bilir bazı yerler
         -->
        <TextView
            android:id="@+id/textViewUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{user.firstName + " " + user.lastName}'
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/imageViewUserProfile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="John Doe" />

        <!-- My Account Button -->
        <Button
            android:id="@+id/buttonMyAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Account"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/textViewUserName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Logout Button -->
        <Button
            android:id="@+id/buttonLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:layout_marginTop="8dp"
            android:backgroundTint="@android:color/holo_red_dark"
            app:layout_constraintTop_toBottomOf="@id/buttonMyAccount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
